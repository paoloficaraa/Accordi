<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Nota: -"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/frequencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noteTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/frequenza_hz"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/tuningBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/frequencyTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:max="100"
        android:progress="50"
        android:enabled="false" />

    <ImageView
        android:id="@+id/tuningIndicator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tuningBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_check_circle_24"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/ScaleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tuningIndicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/startRecognitionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ScaleTv"
        android:layout_marginTop="128dp"
        android:text="Avvia riconoscimento scala"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/stopRecognitionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startRecognitionBtn"
        android:layout_marginTop="20dp"
        android:text="Stoppa riconoscimento scala"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/clearNotesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopRecognitionBtn"
        android:layout_marginTop="20dp"
        android:text="Azzera note"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

</RelativeLayout>